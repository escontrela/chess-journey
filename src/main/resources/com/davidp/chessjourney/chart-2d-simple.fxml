<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import com.davidp.chessjourney.application.ui.controls.Chart2DController?>

<!-- Simple example showing Chart2DController used directly in FXML -->
<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      styleClass="root-gemini-style" spacing="20" prefWidth="800" prefHeight="600" 
      alignment="CENTER">
    
    <Label text="Direct FXML Usage Example" styleClass="text-white-big" />
    
    <!-- Direct usage of Chart2DController in FXML -->
    <Chart2DController fx:id="myChart" prefWidth="700" prefHeight="450" />
    
    <Label text="Chart control defined directly in FXML - access via fx:id='myChart'" 
           styleClass="text-gray-ref-small" wrapText="true" />
    
    <stylesheets>
        <URL value="@custom-styles.css" />
    </stylesheets>
    
</VBox>