<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.davidp.chessjourney.application.ui.controls.Chart2DController?>

<!-- Example FXML showing how to integrate Chart2DController in existing layouts -->
<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.davidp.chessjourney.application.ui.controls.demo.UserStatsChart2DIntegration"
      styleClass="root-gemini-style" spacing="20" prefWidth="800" prefHeight="600">
    
    <!-- Header section -->
    <Label fx:id="chartTitle" text="User Performance Analytics" styleClass="text-white-big" />
    
    <!-- Controls section -->
    <HBox spacing="10" styleClass="task-bar">
        <Button text="Load Sample Data" onAction="#loadSampleData" styleClass="button-regular" />
        <Button text="Add Random Point" onAction="#addRandomPoint" styleClass="button-regular" />
        <Button text="Reset Chart" onAction="#resetChart" styleClass="button-red" />
        <Button text="Set Custom Range" onAction="#setCustomRange" styleClass="button-gray" />
    </HBox>
    
    <!-- Chart container -->
    <VBox fx:id="chartContainer" spacing="10">
        <!-- The Chart2DController will be added programmatically in initialize() -->
        <!-- Alternatively, you could declare it directly like this: -->
        <!--
        <Chart2DController fx:id="customChart" prefWidth="600" prefHeight="400" />
        -->
    </VBox>
    
    <!-- Footer with instructions -->
    <Label text="This demonstrates the custom 2D chart control integrated with Chess Journey styling" 
           styleClass="text-gray-ref-small" wrapText="true" />
    
    <stylesheets>
        <URL value="@/com/davidp/chessjourney/custom-styles.css" />
    </stylesheets>
    
</VBox>